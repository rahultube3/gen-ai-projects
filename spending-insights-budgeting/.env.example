# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here

# Privacy & Security Settings
REDACTION_LEVEL=MEDIUM          # Options: LOW, MEDIUM, HIGH

# Performance Settings  
CACHE_TTL_HOURS=24              # Vector cache time-to-live in hours
MAX_SEARCH_RESULTS=10           # Default maximum search results
BATCH_SIZE=50                   # Document processing batch size

# Logging Configuration
LOG_LEVEL=INFO                  # Options: DEBUG, INFO, WARNING, ERROR

# Database Settings (optional - defaults work for most cases)
DB_PATH=spending_insights.db    # DuckDB database file path
VECTORSTORE_CACHE_DIR=vectorstore_cache

# UI Settings
STREAMLIT_SERVER_PORT=8501      # Default Streamlit port
STREAMLIT_SERVER_HEADLESS=false # Set to true for server deployment
